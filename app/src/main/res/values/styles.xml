<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTranslucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.DarkButton" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.FloatLabelHint" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

    <style name="TextAppearance.DialogTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
